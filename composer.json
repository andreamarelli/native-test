{
    "name": "andreamarelli/native-test",
    "description": "Test with nativephp/desktop and Laravel",
    "license": "MIT",
    "version": "1.0.2",
    "require": {
        "php": "^8.4",
        "ext-zip": "*",
        "andreamarelli/imet-core": "^3.1",
        "guzzlehttp/guzzle": "^7.10",
        "laravel/framework": "^12.0",
        "laravel/ui": "^4.6",
        "nativephp/desktop": "^2.0",
        "opcodesio/log-viewer": "^3.21",
        "spatie/laravel-csp": "^3.21",
        "spatie/laravel-ignition": "^2.9",
        "symfony/console": "^7.4"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^3.6",
        "driftingly/rector-laravel": "^2.1",
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^3.8",
        "laravel/pint": "^1.26",
        "nunomaduro/collision": "^8.6",
        "rector/rector": "^2.2"
    },
    "repositories": {
        "andreamarelli/modular-forms": {
            "type": "vcs",
            "url": "https://github.com/andreamarelli/modular-forms"
        },
        "andreamarelli/imet-core": {
            "type": "vcs",
            "url": "https://github.com/andreamarelli/imet-core"
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "php artisan ide-helper:generate",
            "php artisan ide-helper:meta",
            "php artisan log-viewer:publish",
            "@php artisan native:install --force --quiet "
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "pre-package-uninstall": [
            "Illuminate\\Foundation\\ComposerScripts::prePackageUninstall"
        ],
        "native:dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -k -c \"#93c5fd,#c4b5fd\" \"php artisan native:run --no-interaction\" \"npm run dev\" --names=app,vite"
        ],
        "phpstan": "./vendor/bin/phpstan analyse --configuration=phpstan.neon --memory-limit 512M",
        "rector": " ./vendor/bin/rector process",
        "pint": "./vendor/bin/pint --config pint.json",
        "fix": "composer rector && composer pint"
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
